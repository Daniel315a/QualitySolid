@model Concretos.Models.VMLogin;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Concretos.styles.css" asp-append-version="true" />
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="email" placeholder="Correo" asp-for="Email" />
        <input type="password" placeholder="Contraseña" asp-for="Password" />

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn"/>
            Mantener sesión iniciada
        </label>
        <button type="submit">Iniciar sesión</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }

    </form>
</body>
</html>
